{
  "private": true,
  "name": "epub-builder",
  "version": "0.0.1",
  "description": "A builder for creating EPUB files",
  "author": "Michiel van der Velde <michiel@michielvdvelde.nl> (https://michielvdvelde.nl)",
  "main": "./dist/exports.js",
  "type": "module",
  "bin": {
    "epub-builder": "./cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test-build": "tsc --noEmit",
    "test": "npm run test-build && jest",
    "generate-docs": "typedoc --out docs src/exports.ts",
    "test-generate-epub": "node ./scripts/test-generate-epub.js",
    "epubcheck": "npm run test-generate-epub && node ./scripts/epubcheck.js",
    "publish": "npm run build && npm publish"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/jest": "^29.5.14",
    "@types/mustache": "^4.2.5",
    "@types/node": "^22.8.5",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.26.11",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@zip.js/zip.js": "^2.7.53",
    "ejs": "^3.1.10",
    "mustache": "^4.2.0",
    "zod": "^3.23.8"
  },
  "files": [
    "dist",
    "cli.js",
    "templates"
  ]
}
